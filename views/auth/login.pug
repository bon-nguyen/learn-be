
extends ../layouts/layout.pug

block content 

    if errors
        each error in errors
            .alert.alert-danger= error
        
    form(action='/auth/login', method='POST')
        .form-group
            label(for='email') Name
            input#name.form-control(type='text', name='email', placeholder='email')
        .form-group
            label(for='password') Phone
            input#phone.form-control(type='text', name='password', placeholder='Password')
        button.btn.btn-primary(type='submit') Submit
