extends ../layouts/layout.pug

block content 
    h1 Create transfer

    form(action='/transfer/create', method='POST')
        <input type="hidden" name="_csrf" value=csrfToken>
        .form-group
            label(for='account') Name
            input#name.form-control(type='text', name='account', placeholder='Account')
        .form-group
            label(for='amount') Amount
            input#phone.form-control(type='text', name='amount', placeholder='Amount')
        button.btn.btn-primary(type='submit') Transfer
