extends ../layouts/layout.pug

block content 
    h1 Create user 

    if errors
        each error in errors
            .alert.alert-danger= error
        
    form(action='/users/create', method='POST',  enctype='multipart/form-data')
        .form-group
            label(for='email') Name
            input#name.form-control(type='text', name='email', placeholder='Email')
        .form-group
            label(for='password') Phone
            input#phone.form-control(type='password', name='password', placeholder='Password')
        .form-group
            label(for='avatar') Avatar
            input#phone.form-control(type='file', name='avatar', placeholder='Avatar')
        button.btn.btn-primary(type='submit') Submit
